<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.cytex.Museum">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Webster\n"
        android:textColor="#000"
        android:textSize="20dp"
        android:id="@+id/name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Moswag\n"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@+id/name"
        android:id="@+id/distance"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Webster\n"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@+id/distance"
        android:id="@+id/use"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activities at placename"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@+id/use"
        android:id="@+id/activities"
       />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img1"
        android:layout_below="@+id/activities"
        android:src="@drawable/bg"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/img1"
        android:textColor="#000"
        android:textSize="20dp"
        android:id="@+id/activity1"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img2"
        android:layout_below="@+id/activity1"
        android:src="@drawable/bg"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@+id/img2"
        android:id="@+id/activity2"
        />


</RelativeLayout>
</ScrollView>
